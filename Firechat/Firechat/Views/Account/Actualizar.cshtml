@model Firechat.Models.ActualizarImagenViewModel

@{
    ViewBag.Title = "Actualizar";

}
@if (ViewBag.Imagen != null || string.IsNullOrEmpty(ViewBag.Imagen))
{
    <div class="row">
        <div class="col-md-4 offset-2">
            <img class="img-fluid img-responsive" src="@ViewBag.Imagen" />
        </div>
    </div>
}

@using (Html.BeginForm("Actualizar", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Actualizar imagen del perfil</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Imagen, new { @class = "control-label col-sm-4" })
            <div class="col-md-10">
                <input type="file" name="Imagen" id="Imagen" class="form-control-file" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

